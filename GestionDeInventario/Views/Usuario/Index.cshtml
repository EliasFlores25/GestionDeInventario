@model IEnumerable<GestionDeInventario.DTOs.UsuarioDTOs.UsuarioResponseDTO>
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Gestión de Usuarios";
    int pageNumber = ViewBag.PageNumber ?? 1;
    int totalPages = ViewBag.TotalPages ?? 1;
    int totalRegistros = ViewBag.TotalRegistros ?? 0;
}

<style>
    :root {
        --primary: #2563eb;
        --success: #10b981;
        --danger: #ef4444;
        --warning: #f59e0b;
        --dark: #1f2937;
        --light: #f8fafc;
        --border: #e5e7eb;
        --info: #3b82f6;
        --admin: #8b5cf6;
        --employee: #06b6d4;
        --supervisor: #f97316;
    }

    .container-usuarios {
        padding: 1rem;
        background: var(--light);
        min-height: 100vh;
    }

    .header {
        background: white;
        padding: 1rem;
        border-radius: 10px;
        margin-bottom: 1rem;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 1rem;
    }

        .header h1 {
            margin: 0;
            font-size: 1.5rem;
            color: var(--dark);
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

    .btn {
        padding: 0.5rem 1rem;
        border-radius: 8px;
        border: none;
        font-weight: 500;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        cursor: pointer;
        transition: all 0.2s;
        text-decoration: none;
    }

    .btn-primary {
        background: var(--primary);
        color: white;
    }

        .btn-primary:hover {
            background: #1d4ed8;
        }

    .btn-secondary {
        background: white;
        color: var(--dark);
        border: 2px solid var(--border);
    }

        .btn-secondary:hover {
            background: #f3f4f6;
        }

    .btn-sm {
        width: 36px;
        height: 36px;
        padding: 0;
        justify-content: center;
    }

    .filters {
        background: white;
        border-radius: 10px;
        padding: 1rem;
        margin-bottom: 1rem;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    .filter-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1rem;
        margin-bottom: 1rem;
    }

    .filter-actions {
        display: flex;
        gap: 0.5rem;
        justify-content: flex-end;
    }

    .form-control {
        width: 100%;
        padding: 0.5rem;
        border: 2px solid var(--border);
        border-radius: 6px;
        font-size: 0.9rem;
    }

        .form-control:focus {
            outline: none;
            border-color: var(--primary);
            box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
        }

    .alert {
        padding: 0.75rem 1rem;
        border-radius: 8px;
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .alert-success {
        background: #d1fae5;
        color: #065f46;
        border-left: 4px solid var(--success);
    }

    .alert-danger {
        background: #fee2e2;
        color: #991b1b;
        border-left: 4px solid var(--danger);
    }

    .table-desktop {
        display: none;
        background: white;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        overflow-x: auto;
    }

        .table-desktop table {
            width: 100%;
            border-collapse: collapse;
            min-width: 1000px;
        }

        .table-desktop th {
            background: var(--primary);
            color: white;
            padding: 1rem;
            text-align: left;
            font-weight: 600;
            position: sticky;
            top: 0;
        }

        .table-desktop td {
            padding: 0.75rem 1rem;
            border-bottom: 1px solid var(--border);
            vertical-align: middle;
        }

        .table-desktop tr:hover {
            background: #f8fafc;
        }

    .td-email {
        display: block;
        max-width: 250px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
        cursor: pointer;
        color: var(--primary);
    }

        .td-email:hover {
            color: #1d4ed8;
        }

    .cards-mobile {
        display: grid;
        gap: 1rem;
    }

    .card {
        background: white;
        border-radius: 10px;
        padding: 1rem;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        border-left: 4px solid var(--primary);
    }

    .card-header {
        display: flex;
        justify-content: space-between;
        align-items: start;
        margin-bottom: 1rem;
        padding-bottom: 0.5rem;
        border-bottom: 1px solid var(--border);
    }

    .card-info {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 0.75rem;
        margin-bottom: 1rem;
    }

    .info-item {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
    }

    .info-label {
        font-size: 0.75rem;
        color: #6b7280;
        font-weight: 500;
    }

    .info-value {
        font-size: 0.9rem;
        color: var(--dark);
        word-break: break-word;
    }

    .email-mobile {
        max-height: 20px;
        overflow: hidden;
        position: relative;
        cursor: pointer;
        padding-right: 20px;
    }

        .email-mobile::after {
            content: '...';
            position: absolute;
            right: 0;
            bottom: 0;
            background: white;
            padding-left: 5px;
        }

        .email-mobile.expanded {
            max-height: none;
            white-space: pre-wrap;
        }

            .email-mobile.expanded::after {
                display: none;
            }

    .card-actions {
        display: flex;
        gap: 0.5rem;
        justify-content: center;
        padding-top: 0.5rem;
        border-top: 1px solid var(--border);
    }

    .badge {
        padding: 0.25rem 0.75rem;
        border-radius: 20px;
        font-size: 0.75rem;
        font-weight: 600;
        white-space: nowrap;
        display: inline-block;
    }

    .badge-admin {
        background: #ede9fe;
        color: #7c3aed;
        border: 1px solid #7c3aed;
    }

    .badge-employee {
        background: #e0f2fe;
        color: #0284c7;
        border: 1px solid #0284c7;
    }

    .badge-supervisor {
        background: #fff7ed;
        color: #ea580c;
        border: 1px solid #ea580c;
    }

    .badge-user {
        background: #f0f9ff;
        color: #0ea5e9;
        border: 1px solid #0ea5e9;
    }

    .badge-default {
        background: #f3f4f6;
        color: #6b7280;
        border: 1px solid #d1d5db;
    }

    .pagination-container {
        display: flex;
        justify-content: center;
        margin-top: 2rem;
        padding: 1rem;
    }

    .pagination {
        display: flex;
        gap: 0.25rem;
        align-items: center;
        flex-wrap: wrap;
    }

    .page-link {
        min-width: 36px;
        height: 36px;
        padding: 0 0.5rem;
        border: 2px solid var(--border);
        border-radius: 6px;
        background: white;
        color: var(--dark);
        text-decoration: none;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .page-link:hover {
            background: #f3f4f6;
            border-color: #d1d5db;
        }

        .page-link.active {
            background: var(--primary);
            color: white;
            border-color: var(--primary);
        }

        .page-link.disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }

    .empty-state {
        text-align: center;
        padding: 3rem 1rem;
        color: #6b7280;
        background: white;
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    .modal-email {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0,0,0,0.5);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 9999;
    }

    .modal-content {
        background: white;
        padding: 2rem;
        border-radius: 10px;
        max-width: 500px;
        width: 90%;
        max-height: 80vh;
        overflow-y: auto;
    }

    .password-hidden {
        color: var(--text-light);
        font-style: italic;
        letter-spacing: 2px;
    }

    @@media (min-width: 768px) {
        .container-usuarios {
            padding: 1.5rem;
        }

        .table-desktop {
            display: block;
        }

        .cards-mobile {
            display: none;
        }

        .header h1 {
            font-size: 1.75rem;
        }
    }

    @@media (max-width: 767px) {
        .table-desktop {
            display: none;
        }

        .cards-mobile {
            display: grid;
        }

        .header {
            padding: 0.75rem;
        }

        .filter-grid {
            grid-template-columns: 1fr;
        }

        .card-info {
            grid-template-columns: 1fr;
        }
    }
</style>

<div class="container-usuarios">
    <div class="header">
        <h1><i class="fas fa-users-cog"></i> @ViewData["Title"]</h1>
        <div class="d-flex gap-2">
            <button class="btn btn-secondary" data-bs-toggle="collapse" data-bs-target="#filters">
                <i class="fas fa-filter"></i> Filtros
            </button>
        </div>
    </div>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger"><i class="fas fa-exclamation-circle"></i> @ViewBag.Error</div>
    }
    @if (TempData["Ok"] != null)
    {
        <div class="alert alert-success"><i class="fas fa-check-circle"></i> @TempData["Ok"]</div>
    }
    @if (TempData["MensajeExito"] != null)
    {
        <div class="alert alert-success"><i class="fas fa-check-circle"></i> @TempData["MensajeExito"]</div>
    }
    @if (TempData["MensajeError"] != null)
    {
        <div class="alert alert-danger"><i class="fas fa-exclamation-circle"></i> @TempData["MensajeError"]</div>
    }

    <div class="filters collapse" id="filters">
        <form asp-action="Index" method="get">
            <input type="hidden" name="page" value="1" />
            <div class="filter-grid">
                <input type="text" class="form-control" name="nombre" placeholder="Nombre del usuario" value="@ViewBag.CurrentNombre">
                <select class="form-control" name="tipoRol">
                    <option value="">Todos los roles</option>
                    <option value="Administrador" selected="@("Administrador" == ViewBag.CurrentTipoRol)">Administrador</option>
                </select>
            </div>
            <div class="filter-actions">
                <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-times"></i> Limpiar</a>
                <button type="submit" class="btn btn-primary"><i class="fas fa-search"></i> Buscar</button>
            </div>
        </form>
    </div>

    <div class="table-desktop">
        <table>
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Email</th>
                    <th>Rol</th>
                    <th>Contraseña</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td style="font-weight: 600;">@item.nombre</td>
                            <td>
                                <span class="td-email" onclick="mostrarEmail('@Html.Raw(item.email.Replace("'", "\\'"))')">
                                    @item.email
                                </span>
                            </td>
                            <td>
                                @{
                                    var badgeClass = item.tipoRol switch
                                    {
                                        "Administrador" => "badge-admin",
                                        _ => "badge-default"
                                    };
                                }
                                <span class="badge @badgeClass">
                                    @item.tipoRol
                                </span>
                            </td>
                            <td class="password-hidden">••••••••</td>
                            <td>
                                <div class="d-flex gap-1 justify-content-center">
                                    <a asp-action="Edit" asp-route-id="@item.idUsuario" class="btn btn-secondary btn-sm" title="Editar">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.idUsuario" class="btn btn-secondary btn-sm" title="Detalles">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.idUsuario" class="btn btn-secondary btn-sm" title="Eliminar">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="empty-state">
                            <i class="fas fa-users-slash fa-2x mb-2"></i>
                            <p>No hay usuarios registrados</p>
                            <a asp-action="Create" class="btn btn-primary"><i class="fas fa-user-plus"></i> Crear Primer Usuario</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="cards-mobile">
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                var badgeClass = item.tipoRol switch
                {
                    "Administrador" => "badge-admin",
                    _ => "badge-default"
                };

                <div class="card">
                    <div class="card-header">
                        <div>
                            <strong>@item.nombre</strong>
                        </div>
                        <span class="badge @badgeClass">@item.tipoRol</span>
                    </div>
                    <div class="card-info">
                        <div class="info-item">
                            <span class="info-label">Email</span>
                            <div class="info-value descripcion-mobile" onclick="this.classList.toggle('expanded')">@item.email</div>
                        </div>
                        <div class="info-item">
                            <span class="info-label">Contraseña</span>
                            <span class="info-value password-hidden">••••••••</span>
                        </div>
                    </div>
                    <div class="card-actions">
                        <a asp-action="Edit" asp-route-id="@item.idUsuario" class="btn btn-secondary btn-sm"><i class="fas fa-edit"></i></a>
                        <a asp-action="Details" asp-route-id="@item.idUsuario" class="btn btn-secondary btn-sm"><i class="fas fa-eye"></i></a>
                        <a asp-action="Delete" asp-route-id="@item.idUsuario" class="btn btn-secondary btn-sm"><i class="fas fa-trash"></i></a>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="empty-state">
                <i class="fas fa-users-slash fa-2x mb-2"></i>
                <p>No hay usuarios registrados</p>
                <a asp-action="Create" class="btn btn-primary"><i class="fas fa-user-plus"></i> Crear Primer Usuario</a>
            </div>
        }
    </div>

    @if (totalPages > 1)
    {
        <div class="pagination-container">
            <nav>
                <ul class="pagination">
                    @if (pageNumber > 1)
                    {
                        <li>
                            <a class="page-link" asp-action="Index" asp-route-pageNumber="@(pageNumber - 1)"
                               asp-route-nombre="@ViewBag.CurrentNombre" asp-route-tipoRol="@ViewBag.CurrentTipoRol">
                                <i class="fas fa-chevron-left"></i>
                            </a>
                        </li>
                    }
                    @for (int i = 1; i <= totalPages; i++)
                    {
                        if (i == 1 || i == totalPages || (i >= pageNumber - 2 && i <= pageNumber + 2))
                        {
                            <li>
                                <a class="page-link @(i == pageNumber ? "active" : "")" asp-action="Index" asp-route-pageNumber="@i"
                                   asp-route-nombre="@ViewBag.CurrentNombre" asp-route-tipoRol="@ViewBag.CurrentTipoRol">
                                    @i
                                </a>
                            </li>
                        }
                        else if (i == pageNumber - 3 || i == pageNumber + 3)
                        {
                            <li><span class="page-link disabled">...</span></li>
                        }
                    }
                    @if (pageNumber < totalPages)
                    {
                        <li>
                            <a class="page-link" asp-action="Index" asp-route-pageNumber="@(pageNumber + 1)"
                               asp-route-nombre="@ViewBag.CurrentNombre" asp-route-tipoRol="@ViewBag.CurrentTipoRol">
                                <i class="fas fa-chevron-right"></i>
                            </a>
                        </li>
                    }
                </ul>
            </nav>
        </div>
    }
</div>

@section Scripts {
    <script>
        function mostrarEmail(email) {
            email = email.replace(/\\'/g, "'");
            const modal = $(`
                <div class="modal-email">
                    <div class="modal-content">
                        <h4><i class="fas fa-envelope"></i> Email Completo</h4>
                        <p style="word-break: break-word; white-space: pre-wrap;">${email}</p>
                        <button class="btn btn-primary" onclick="$(this).closest('.modal-email').remove()">
                            <i class="fas fa-times"></i> Cerrar
                        </button>
                    </div>
                </div>
            `);
            modal.on('click', e => { if (e.target === modal[0]) modal.remove(); });
            $('body').append(modal);
        }

        $(document).ready(function() {
            setTimeout(() => $('.alert').fadeOut(300, function() { $(this).remove(); }), 4000);

            $('#filters').on('show.bs.collapse', function() {
                $('[data-bs-target="#filters"] i').removeClass('fa-filter').addClass('fa-times');
            }).on('hide.bs.collapse', function() {
                $('[data-bs-target="#filters"] i').removeClass('fa-times').addClass('fa-filter');
            });

            $(document).on('click', '.page-link', function(e) {
                if (!$(this).hasClass('disabled') && !$(this).hasClass('active')) {
                    $('html, body').animate({ scrollTop: $('.container-usuarios').offset().top - 20 }, 300);
                }
            });
        });
    </script>
}