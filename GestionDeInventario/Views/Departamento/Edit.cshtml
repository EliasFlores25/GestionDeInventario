@model GestionDeInventario.Models.Departamento

@{
    ViewData["Title"] = "Editar Departamento";
}

<div class="container mt-4 p-4 bg-dark text-white rounded shadow">
    <h2 class="mb-4">Editar Departamento</h2>

    <form asp-action="Edit">

        <input type="hidden" asp-for="idDepartamento" />

        <div class="form-group mb-3">
            <label class="form-label">Nombre</label>
            <input asp-for="nombre" class="form-control" />
            <span asp-validation-for="nombre" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label class="form-label">Descripción</label>
            <textarea asp-for="descripcion" class="form-control"></textarea>
            <span asp-validation-for="descripcion" class="text-danger"></span>
        </div>

        <div class="d-flex">
            <button type="submit" class="btn btn-warning me-2">Actualizar</button>
            <a asp-action="Index" class="btn btn-secondary">Volver</a>
        </div>

    </form>
</div>