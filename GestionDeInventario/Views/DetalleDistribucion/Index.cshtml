@model IEnumerable<GestionDeInventario.DTOs.DetalleDistribucionDTOs.DetalleDistribucionResponseDTO>
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Gestión de Detalles de Distribución";
    var distribucionesNombres = ViewBag.DistribucionesNombres as Dictionary<int, string> ?? new Dictionary<int, string>();
    var productosNombres = ViewBag.ProductosNombres as Dictionary<int, string> ?? new Dictionary<int, string>();

    var distribucionesList = ViewBag.DistribucionId as List<SelectListItem> ?? new List<SelectListItem>();
    var productosList = ViewBag.ProductoId as List<SelectListItem> ?? new List<SelectListItem>();

    int pageNumber = ViewBag.PageNumber ?? 1;
    int totalPages = ViewBag.TotalPages ?? 1;
    int totalRegistros = ViewBag.TotalRegistros ?? 0;
    bool isFilterApplied = ViewData["IsFilterApplied"] as bool? ?? false;
}

<style>
    :root {
        --primary: #2563eb;
        --success: #10b981;
        --danger: #ef4444;
        --warning: #f59e0b;
        --excel-green: #10b981;
        --excel-blue: #0ea5e9;
        --dark: #1f2937;
        --light: #f8fafc;
        --border: #e5e7eb;
    }

    .container-distribuciones {
        padding: 1rem;
        background: var(--light);
        min-height: 100vh;
    }

    .header {
        background: white;
        padding: 1rem;
        border-radius: 10px;
        margin-bottom: 1rem;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 1rem;
    }

        .header h1 {
            margin: 0;
            font-size: 1.5rem;
            color: var(--dark);
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

    .btn {
        padding: 0.5rem 1rem;
        border-radius: 8px;
        border: none;
        font-weight: 500;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        cursor: pointer;
        transition: all 0.2s;
        text-decoration: none;
    }

    .btn-primary {
        background: var(--primary);
        color: white;
    }

        .btn-primary:hover {
            background: #1d4ed8;
        }

    .btn-secondary {
        background: white;
        color: var(--dark);
        border: 2px solid var(--border);
    }

        .btn-secondary:hover {
            background: #f3f4f6;
        }

    .btn-sm {
        width: 36px;
        height: 36px;
        padding: 0;
        justify-content: center;
    }

    .btn-excel {
        background: var(--excel-green);
        color: white;
    }

        .btn-excel:hover {
            background: #0da271;
            transform: translateY(-1px);
            box-shadow: 0 2px 6px rgba(16, 185, 129, 0.3);
        }

    .btn-excel-filtered {
        background: var(--excel-blue);
        color: white;
    }

        .btn-excel-filtered:hover {
            background: #0284c7;
            transform: translateY(-1px);
            box-shadow: 0 2px 6px rgba(14, 165, 233, 0.3);
        }

    .filters {
        background: white;
        border-radius: 10px;
        padding: 1rem;
        margin-bottom: 1rem;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    .filter-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1rem;
        margin-bottom: 1rem;
    }

    .filter-actions {
        display: flex;
        gap: 0.5rem;
        justify-content: flex-end;
        flex-wrap: wrap;
    }

    .form-control, .form-select {
        width: 100%;
        padding: 0.5rem;
        border: 2px solid var(--border);
        border-radius: 6px;
        font-size: 0.9rem;
    }

        .form-control:focus, .form-select:focus {
            outline: none;
            border-color: var(--primary);
            box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
        }

    .alert {
        padding: 0.75rem 1rem;
        border-radius: 8px;
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .alert-success {
        background: #d1fae5;
        color: #065f46;
        border-left: 4px solid var(--success);
    }

    .alert-danger {
        background: #fee2e2;
        color: #991b1b;
        border-left: 4px solid var(--danger);
    }

    .table-desktop {
        display: none;
        background: white;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        overflow-x: auto;
    }

        .table-desktop table {
            width: 100%;
            border-collapse: collapse;
            min-width: 1000px;
        }

        .table-desktop th {
            background: var(--primary);
            color: white;
            padding: 1rem;
            text-align: left;
            font-weight: 600;
            position: sticky;
            top: 0;
        }

        .table-desktop td {
            padding: 0.75rem 1rem;
            border-bottom: 1px solid var(--border);
            vertical-align: middle;
        }

        .table-desktop tr:hover {
            background: #f8fafc;
        }

    /* Columnas específicas */
    .td-distribucion, .td-producto {
        max-width: 180px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .cards-mobile {
        display: grid;
        gap: 1rem;
    }

    .card {
        background: white;
        border-radius: 10px;
        padding: 1rem;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        border-left: 4px solid var(--primary);
    }

    .card-header {
        display: flex;
        justify-content: space-between;
        align-items: start;
        margin-bottom: 1rem;
        padding-bottom: 0.5rem;
        border-bottom: 1px solid var(--border);
    }

    .card-info {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 0.75rem;
        margin-bottom: 1rem;
    }

    .info-item {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
    }

    .info-label {
        font-size: 0.75rem;
        color: #6b7280;
        font-weight: 500;
    }

    .info-value {
        font-size: 0.9rem;
        color: var(--dark);
        word-break: break-word;
    }

    .monetary-value {
        font-weight: 600;
        color: var(--dark);
    }

    .card-actions {
        display: flex;
        gap: 0.5rem;
        justify-content: center;
        padding-top: 0.5rem;
        border-top: 1px solid var(--border);
    }

    .badge {
        padding: 0.25rem 0.75rem;
        border-radius: 20px;
        font-size: 0.75rem;
        font-weight: 600;
        white-space: nowrap;
        display: inline-block;
    }

    .badge-primary {
        background: #dbeafe;
        color: #1e40af;
    }

    .badge-success {
        background: #d1fae5;
        color: #065f46;
    }

    .pagination-container {
        display: flex;
        justify-content: center;
        margin-top: 2rem;
        padding: 1rem;
    }

    .pagination {
        display: flex;
        gap: 0.25rem;
        align-items: center;
        flex-wrap: wrap;
    }

    .page-link {
        min-width: 36px;
        height: 36px;
        padding: 0 0.5rem;
        border: 2px solid var(--border);
        border-radius: 6px;
        background: white;
        color: var(--dark);
        text-decoration: none;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .page-link:hover {
            background: #f3f4f6;
            border-color: #d1d5db;
        }

        .page-link.active {
            background: var(--primary);
            color: white;
            border-color: var(--primary);
        }

        .page-link.disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }

    .empty-state {
        text-align: center;
        padding: 3rem 1rem;
        color: #6b7280;
        background: white;
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    .btn-danger {
        background: var(--danger);
        color: white;
    }

        .btn-danger:hover {
            background: #dc2626;
        }

    @@media (min-width: 768px) {
        .container-distribuciones

    {
        padding: 1.5rem;
    }

    .table-desktop {
        display: block;
    }

    .cards-mobile {
        display: none;
    }

    .header h1 {
        font-size: 1.75rem;
    }

    }

    @@media (max-width: 767px) {
        .table-desktop

    {
        display: none;
    }

    .cards-mobile {
        display: grid;
    }

    .header {
        padding: 0.75rem;
    }

    .filter-grid {
        grid-template-columns: 1fr;
    }

    .card-info {
        grid-template-columns: 1fr;
    }

    }

    /* Responsive para filtros */
    @@media (max-width: 767px) {
        .filter-actions

    {
        gap: 0.4rem;
        justify-content: center;
    }

    .filter-actions .btn {
        padding: 0.4rem 0.6rem;
        font-size: 0.8rem;
        flex: 1 1 auto;
    }

    }

    @@media (max-width: 480px) {
        .filter-actions

    {
        flex-wrap: nowrap;
        overflow-x: auto;
        padding-bottom: 0.25rem;
        justify-content: flex-start;
    }

    .filter-actions .btn {
        flex-shrink: 0;
        white-space: nowrap;
    }

        .filter-actions .btn span {
            display: none;
        }

        .filter-actions .btn i {
            margin-right: 0;
            font-size: 1rem;
        }

    .btn-excel, .btn-excel-filtered {
        min-width: 40px;
        width: 40px;
        justify-content: center;
        padding: 0.4rem;
    }

    }
</style>

<div class="container-distribuciones">
    <div class="header">
        <h1><i class="fas fa-boxes"></i> @ViewData["Title"]</h1>
        <div class="d-flex gap-2">
            <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Nuevo Detalle</a>
            <button class="btn btn-secondary" data-bs-toggle="collapse" data-bs-target="#filters">
                <i class="fas fa-filter"></i> Filtros
            </button>
        </div>
    </div>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger"><i class="fas fa-exclamation-circle"></i> @ViewBag.Error</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger"><i class="fas fa-exclamation-circle"></i> @TempData["Error"]</div>
    }
    @if (TempData["Ok"] != null)
    {
        <div class="alert alert-success"><i class="fas fa-check-circle"></i> @TempData["Ok"]</div>
    }

    <div class="filters collapse" id="filters">
        <form asp-action="Index" method="get">
            <input type="hidden" name="pageNumber" value="1" />
            <div class="filter-grid">
                <select class="form-select" name="distribucionId">
                    @foreach (var item in distribucionesList)
                    {
                        <option value="@item.Value" selected="@(item.Value == ViewBag.CurrentDistribucionId?.ToString())">@item.Text</option>
                    }
                </select>
                <select class="form-select" name="productoId">
                    @foreach (var item in productosList)
                    {
                        <option value="@item.Value" selected="@(item.Value == ViewBag.CurrentProductoId?.ToString())">@item.Text</option>
                    }
                </select>
                <input type="number" class="form-control" name="cantidadMin" placeholder="Cantidad mínima" value="@ViewBag.CurrentCantidadMin">
                <input type="number" class="form-control" name="cantidadMax" placeholder="Cantidad máxima" value="@ViewBag.CurrentCantidadMax">
            </div>
            <div class="filter-actions">
                <a asp-action="Exportar" class="btn btn-excel">
                    <i class="fas fa-file-excel"></i> <span>Exportar Todo</span>
                </a>
                <a asp-action="ExportarRapido" class="btn btn-excel-filtered">
                    <i class="fas fa-download"></i> <span>Exportar Filtros</span>
                </a>
                @if (isFilterApplied)
                {
                    <a asp-action="ExportarRapido" class="btn btn-excel-filtered">
                        <i class="fas fa-download"></i> <span>Exportar Filtros</span>
                    </a>
                }
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-times"></i> <span>Limpiar</span>
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-search"></i> <span>Buscar</span>
                </button>
            </div>
        </form>
    </div>

    <div class="table-desktop">
        <table>
            <thead>
                <tr>
                    <th>Distribución</th>
                    <th>Producto</th>
                    <th>Cantidad</th>
                    <th>Precio Unitario</th>
                    <th>Subtotal</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                           
                            <td class="td-distribucion" title="@distribucionesNombres.GetValueOrDefault(item.DistribucionId, "N/A")">
                                @distribucionesNombres.GetValueOrDefault(item.DistribucionId, "N/A")
                            </td>
                            <td class="td-producto" title="@productosNombres.GetValueOrDefault(item.ProductoId, "N/A")">
                                @productosNombres.GetValueOrDefault(item.ProductoId, "N/A")
                            </td>
                            <td>
                                <span class="badge badge-success">@item.Cantidad</span>
                            </td>
                            <td class="monetary-value">@item.PrecioCostoUnitario.ToString("C")</td>
                            <td class="monetary-value">
                                <strong>@item.Subtotal.ToString("C")</strong>
                            </td>
                            <td>
                                <div class="d-flex gap-1 justify-content-center">
                                    <a asp-action="Edit" asp-route-id="@item.IdDetalleDistribucion" class="btn btn-secondary btn-sm" title="Editar">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.IdDetalleDistribucion" class="btn btn-secondary btn-sm" title="Detalles">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.IdDetalleDistribucion" class="btn btn-secondary btn-sm" title="Eliminar">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                    <a asp-action="DescargarPdf" asp-route-id="@item.IdDetalleDistribucion"
                                       target="_blank" class="btn btn-danger btn-sm" title="Generar PDF">
                                        <i class="fas fa-file-pdf"></i>
                                    </a>

                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="empty-state">
                            <i class="fas fa-boxes fa-2x mb-2"></i>
                            <p>No hay detalles de distribución registrados</p>
                            <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Crear Primer Detalle</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="cards-mobile">
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <div class="card">
                    <div class="card-header">
                        <strong>
                            Distribución: @distribucionesNombres.GetValueOrDefault(item.DistribucionId, "N/A")
                        </strong>
                        <span class="badge badge-success">@item.Cantidad unidades</span>
                    </div>
                    <div class="card-info">
                        <div class="info-item">
                            <span class="info-label">Producto</span>
                            <span class="info-value">@productosNombres.GetValueOrDefault(item.ProductoId, "N/A")</span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">Precio Unitario</span>
                            <span class="info-value monetary-value">@item.PrecioCostoUnitario.ToString("C")</span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">Subtotal</span>
                            <span class="info-value monetary-value">
                                <strong>@item.Subtotal.ToString("C")</strong>
                            </span>
                        </div>
                    </div>
                    <div class="card-actions">
                        <a asp-action="Edit" asp-route-id="@item.IdDetalleDistribucion" class="btn btn-secondary btn-sm"><i class="fas fa-edit"></i></a>
                        <a asp-action="Details" asp-route-id="@item.IdDetalleDistribucion" class="btn btn-secondary btn-sm"><i class="fas fa-eye"></i></a>
                        <a asp-action="Delete" asp-route-id="@item.IdDetalleDistribucion" class="btn btn-secondary btn-sm"><i class="fas fa-trash"></i></a>
                        <a asp-controller="DetalleDistribucion" asp-action="DescargarPdf" asp-route-id="@item.IdDetalleDistribucion" target="_blank" class="btn btn-danger btn-sm" title="Generar Reporte PDF">
                            <i class="fas fa-file-pdf"></i>
                        </a>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="empty-state">
                <i class="fas fa-boxes fa-2x mb-2"></i>
                <p>No hay detalles de distribución registrados</p>
                <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Crear Primer Detalle</a>
            </div>
        }
    </div>

    @if (totalPages > 1)
    {
        <div class="pagination-container">
            <nav>
                <ul class="pagination">
                    @if (ViewBag.HasPreviousPage)
                    {
                        <li>
                            <a class="page-link" asp-action="Index" asp-route-pageNumber="@(pageNumber - 1)"
                               asp-route-distribucionId="@ViewBag.CurrentDistribucionId"
                               asp-route-productoId="@ViewBag.CurrentProductoId"
                               asp-route-cantidadMin="@ViewBag.CurrentCantidadMin"
                               asp-route-cantidadMax="@ViewBag.CurrentCantidadMax">
                                <i class="fas fa-chevron-left"></i>
                            </a>
                        </li>
                    }
                    @for (int i = 1; i <= totalPages; i++)
                    {
                        if (i == 1 || i == totalPages || (i >= pageNumber - 2 && i <= pageNumber + 2))
                        {
                            <li>
                                <a class="page-link @(i == pageNumber ? "active" : "")" asp-action="Index" asp-route-pageNumber="@i"
                                   asp-route-distribucionId="@ViewBag.CurrentDistribucionId"
                                   asp-route-productoId="@ViewBag.CurrentProductoId"
                                   asp-route-cantidadMin="@ViewBag.CurrentCantidadMin"
                                   asp-route-cantidadMax="@ViewBag.CurrentCantidadMax">
                                    @i
                                </a>
                            </li>
                        }
                        else if (i == pageNumber - 3 || i == pageNumber + 3)
                        {
                            <li><span class="page-link disabled">...</span></li>
                        }
                    }
                    @if (ViewBag.HasNextPage)
                    {
                        <li>
                            <a class="page-link" asp-action="Index" asp-route-pageNumber="@(pageNumber + 1)"
                               asp-route-distribucionId="@ViewBag.CurrentDistribucionId"
                               asp-route-productoId="@ViewBag.CurrentProductoId"
                               asp-route-cantidadMin="@ViewBag.CurrentCantidadMin"
                               asp-route-cantidadMax="@ViewBag.CurrentCantidadMax">
                                <i class="fas fa-chevron-right"></i>
                            </a>
                        </li>
                    }
                </ul>
            </nav>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Auto-hide alerts after 4 seconds
            setTimeout(() => {
                $('.alert').fadeOut(300, function() { $(this).remove(); });
            }, 4000);

            // Cambiar ícono del botón de filtros
            $('#filters').on('show.bs.collapse', function() {
                $('[data-bs-target="#filters"] i').removeClass('fa-filter').addClass('fa-times');
            }).on('hide.bs.collapse', function() {
                $('[data-bs-target="#filters"] i').removeClass('fa-times').addClass('fa-filter');
            });

            // Smooth scroll al cambiar de página
            $(document).on('click', '.page-link', function(e) {
                if (!$(this).hasClass('disabled') && !$(this).hasClass('active')) {
                    $('html, body').animate({
                        scrollTop: $('.container-distribuciones').offset().top - 20
                    }, 300);
                }
            });
        });
    </script>
}