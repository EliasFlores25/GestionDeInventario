@model GestionDeInventario.DTOs.UsuarioDTOs.UsuarioLoginDTO

@{
    ViewData["Title"] = "Inicio de Sesión";
    Layout = null; // No usar el layout para que sea una página de login independiente
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema de Gestión</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GestionDeInventario.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">

    <style>
        :root {
            --primary: #2563eb;
            --primary-dark: #1d4ed8;
            --success: #10b981;
            --danger: #ef4444;
            --warning: #f59e0b;
            --dark: #1f2937;
            --light: #f8fafc;
            --border: #e5e7eb;
            --text-light: #6b7280;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif;
            background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 1rem;
        }

        .login-container {
            width: 100%;
            max-width: 450px;
        }

        .login-card {
            background: white;
            border-radius: 16px;
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
            padding: 2.5rem;
            border-top: 5px solid var(--primary);
            position: relative;
            overflow: hidden;
        }

        .login-header {
            text-align: center;
            margin-bottom: 2rem;
            position: relative;
        }

            .login-header::after {
                content: '';
                display: block;
                width: 60px;
                height: 4px;
                background: var(--primary);
                border-radius: 2px;
                margin: 1rem auto 0;
            }

        .login-icon {
            background: var(--primary);
            width: 80px;
            height: 80px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1.5rem;
            color: white;
            font-size: 2rem;
            box-shadow: 0 4px 12px rgba(37, 99, 235, 0.3);
        }

        h1 {
            color: var(--dark);
            font-size: 1.75rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

        .login-subtitle {
            color: var(--text-light);
            font-size: 0.95rem;
            margin-bottom: 1rem;
        }

        .form-group {
            margin-bottom: 1.25rem;
            position: relative;
        }

        .form-label {
            font-weight: 600;
            color: var(--dark);
            margin-bottom: 0.5rem;
            display: block;
            font-size: 0.9rem;
        }

        .form-control {
            width: 100%;
            padding: 0.875rem 1rem 0.875rem 3rem;
            border: 2px solid var(--border);
            border-radius: 10px;
            font-size: 0.95rem;
            transition: all 0.2s;
            background: white;
        }

            .form-control:focus {
                outline: none;
                border-color: var(--primary);
                box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
            }

            .form-control::placeholder {
                color: var(--text-light);
                opacity: 0.7;
            }

        .input-icon {
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: var(--text-light);
            font-size: 1rem;
            z-index: 2;
        }

        .validation-error {
            color: var(--danger);
            font-size: 0.85rem;
            margin-top: 0.25rem;
            display: block;
        }

        .alert-danger {
            background: #fee2e2;
            color: #991b1b;
            border-left: 4px solid var(--danger);
            padding: 1rem 1.25rem;
            border-radius: 8px;
            margin-bottom: 1.5rem;
        }

        .btn {
            padding: 0.875rem 2rem;
            border-radius: 10px;
            border: none;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            cursor: pointer;
            transition: all 0.2s;
            text-decoration: none;
            font-size: 0.95rem;
            width: 100%;
        }

        .btn-success {
            background: var(--success);
            color: white;
        }

            .btn-success:hover {
                background: #0da271;
                transform: translateY(-1px);
                box-shadow: 0 4px 8px rgba(16, 185, 129, 0.2);
            }

        .register-link {
            text-align: center;
            margin-top: 1.5rem;
            padding-top: 1.5rem;
            border-top: 1px solid var(--border);
        }

            .register-link a {
                color: var(--primary);
                text-decoration: none;
                font-weight: 600;
                transition: color 0.2s;
                display: inline-flex;
                align-items: center;
                gap: 0.5rem;
            }

                .register-link a:hover {
                    color: var(--primary-dark);
                }

        .password-toggle {
            position: absolute;
            right: 1rem;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            color: var(--text-light);
            cursor: pointer;
            font-size: 1rem;
            z-index: 3;
        }

            .password-toggle:hover {
                color: var(--primary);
            }

        .form-select {
            width: 100%;
            padding: 0.875rem 1rem 0.875rem 3rem;
            border: 2px solid var(--border);
            border-radius: 10px;
            font-size: 0.95rem;
            transition: all 0.2s;
            background: white;
            appearance: none;
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 16 16'%3e%3cpath fill='none' stroke='%236b7280' stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='m2 5 6 6 6-6'/%3e%3c/svg%3e");
            background-repeat: no-repeat;
            background-position: right 0.75rem center;
            background-size: 16px 12px;
        }

            .form-select:focus {
                outline: none;
                border-color: var(--primary);
                box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
            }

        .select-icon {
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: var(--text-light);
            font-size: 1rem;
            z-index: 2;
        }

        @@media (max-width: 576px) {
            .login-card {
                padding: 2rem 1.5rem;
            }

            h1 {
                font-size: 1.5rem;
            }

            .login-icon {
                width: 70px;
                height: 70px;
                font-size: 1.75rem;
            }

            .btn {
                padding: 0.75rem 1.5rem;
            }
        }

        @@media (max-width: 400px) {
            .login-card {
                padding: 1.5rem;
            }

            .login-icon {
                width: 60px;
                height: 60px;
                font-size: 1.5rem;
            }
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-card">
            <div class="login-header">
                <div class="login-icon">
                    <i class="fas fa-lock"></i>
                </div>
                <h1>Iniciar Sesión</h1>
                <p class="login-subtitle">Accede a tu cuenta para gestionar el sistema</p>
            </div>

            <form asp-action="Login" method="post">
                <div asp-validation-summary="ModelOnly" class="alert-danger"></div>

                @* Campo oculto para redirigir después del login *@
                <input type="hidden" name="ReturnUrl" value="@ViewData["ReturnUrl"]" />

                <div class="form-group">
                    <label class="form-label" asp-for="email">Correo Electrónico</label>
                    <div class="position-relative">
                        <i class="fas fa-envelope input-icon"></i>
                        <input asp-for="email" class="form-control" placeholder="ejemplo@correo.com" />
                    </div>
                    <span asp-validation-for="email" class="validation-error"></span>
                </div>

                <div class="form-group">
                    <label class="form-label" asp-for="contraseña">Contraseña</label>
                    <div class="position-relative">
                        <i class="fas fa-lock input-icon"></i>
                        <input asp-for="contraseña" type="password" class="form-control" placeholder="••••••••" id="passwordInput" />
                        <button type="button" class="password-toggle" id="passwordToggle">
                            <i class="fas fa-eye"></i>
                        </button>
                    </div>
                    <span asp-validation-for="contraseña" class="validation-error"></span>
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-sign-in-alt"></i> Acceder al Sistema
                    </button>
                </div>
            </form>

            <div class="register-link">
                <a asp-action="Register">
                    <i class="fas fa-user-plus"></i> ¿No tienes cuenta? Regístrate aquí
                </a>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            // Toggle para mostrar/ocultar contraseña
            $('#passwordToggle').click(function () {
                const passwordInput = $('#passwordInput');
                const icon = $(this).find('i');

                if (passwordInput.attr('type') === 'password') {
                    passwordInput.attr('type', 'text');
                    icon.removeClass('fa-eye').addClass('fa-eye-slash');
                } else {
                    passwordInput.attr('type', 'password');
                    icon.removeClass('fa-eye-slash').addClass('fa-eye');
                }
            });

            // Validación en tiempo real
            $('form').on('submit', function (e) {
                let isValid = true;

                $('.form-control').each(function () {
                    if (!$(this).val().trim()) {
                        $(this).addClass('is-invalid');
                        isValid = false;
                    } else {
                        $(this).removeClass('is-invalid');
                    }
                });

                if (!isValid) {
                    e.preventDefault();
                    $('.alert-danger').remove();
                    $('form').prepend(
                        '<div class="alert-danger"><i class="fas fa-exclamation-circle"></i> Por favor, complete todos los campos requeridos.</div>'
                    );
                }
            });

            // Remover clases de error al escribir
            $('.form-control, .form-select').on('input change', function () {
                $(this).removeClass('is-invalid');
            });
        });
    </script>

    @* Eliminado: @await RenderSectionAsync("Scripts", required: false) *@
</body>
</html>