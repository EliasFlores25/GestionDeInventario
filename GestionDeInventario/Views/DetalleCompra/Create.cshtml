                fetch(`/api/productos/${productoId}/precio`)
                    .then(response => response.json())
                    .then(data => {
                        if (data.precio) {
                            document.getElementById('PrecioUnitarioCosto').value = data.precio;
                            calcularSubtotal();
                        }
                    });
                */
            }
        });
    </script>
}