@model IEnumerable<GestionDeInventario.DTOs.ProveedorDTOs.ProveedorResponseDTO>
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Gestión de Proveedores";
    int pageNumber = ViewBag.PageNumber ?? 1;
    int totalPages = ViewBag.TotalPages ?? 1;
    int totalRegistros = ViewBag.TotalRegistros ?? 0;
    bool hasPreviousPage = ViewBag.HasPreviousPage ?? false;
    bool hasNextPage = ViewBag.HasNextPage ?? false;
}

<style>
    :root {
        --primary: #2563eb;
        --success: #10b981;
        --danger: #ef4444;
        --dark: #1f2937;
        --light: #f8fafc;
        --border: #e5e7eb;
        --info: #3b82f6;
        --warning: #f59e0b;
    }

    .container-proveedores {
        padding: 1rem;
        background: var(--light);
        min-height: 100vh;
    }

    .header {
        background: white;
        padding: 1rem;
        border-radius: 10px;
        margin-bottom: 1rem;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 1rem;
    }

        .header h1 {
            margin: 0;
            font-size: 1.5rem;
            color: var(--dark);
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

    .btn {
        padding: 0.5rem 1rem;
        border-radius: 8px;
        border: none;
        font-weight: 500;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        cursor: pointer;
        transition: all 0.2s;
        text-decoration: none;
    }

    .btn-primary {
        background: var(--primary);
        color: white;
    }

        .btn-primary:hover {
            background: #1d4ed8;
        }

    .btn-secondary {
        background: white;
        color: var(--dark);
        border: 2px solid var(--border);
    }

        .btn-secondary:hover {
            background: #f3f4f6;
        }

    .btn-sm {
        width: 36px;
        height: 36px;
        padding: 0;
        justify-content: center;
    }

    .filters {
        background: white;
        border-radius: 10px;
        padding: 1rem;
        margin-bottom: 1rem;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    .filter-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1rem;
        margin-bottom: 1rem;
    }

    .filter-actions {
        display: flex;
        gap: 0.5rem;
        justify-content: flex-end;
    }

    .form-control {
        width: 100%;
        padding: 0.5rem;
        border: 2px solid var(--border);
        border-radius: 6px;
        font-size: 0.9rem;
    }

        .form-control:focus {
            outline: none;
            border-color: var(--primary);
            box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
        }

    .form-select {
        width: 100%;
        padding: 0.5rem;
        border: 2px solid var(--border);
        border-radius: 6px;
        font-size: 0.9rem;
        background-color: white;
    }

        .form-select:focus {
            outline: none;
            border-color: var(--primary);
            box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
        }

    .alert {
        padding: 0.75rem 1rem;
        border-radius: 8px;
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .alert-success {
        background: #d1fae5;
        color: #065f46;
        border-left: 4px solid var(--success);
    }

    .alert-danger {
        background: #fee2e2;
        color: #991b1b;
        border-left: 4px solid var(--danger);
    }

    .table-desktop {
        display: none;
        background: white;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        overflow-x: auto;
    }

        .table-desktop table {
            width: 100%;
            border-collapse: collapse;
            min-width: 800px;
        }

        .table-desktop th {
            background: var(--primary);
            color: white;
            padding: 1rem;
            text-align: left;
            font-weight: 600;
            position: sticky;
            top: 0;
        }

        .table-desktop td {
            padding: 0.75rem 1rem;
            border-bottom: 1px solid var(--border);
            vertical-align: middle;
        }

        .table-desktop tr:hover {
            background: #f8fafc;
        }

    /* NUEVO: Estilos para campos truncados en desktop */
    .td-direccion, .td-email {
        display: block;
        max-width: 200px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
        cursor: pointer;
        color: var(--primary);
        transition: color 0.2s;
    }

        .td-direccion:hover, .td-email:hover {
            color: #1d4ed8;
        }

    .cards-mobile {
        display: grid;
        gap: 1rem;
    }

    .card {
        background: white;
        border-radius: 10px;
        padding: 1rem;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        border-left: 4px solid var(--primary);
    }

    .card-header {
        display: flex;
        justify-content: space-between;
        align-items: start;
        margin-bottom: 1rem;
        padding-bottom: 0.5rem;
        border-bottom: 1px solid var(--border);
    }

    .card-info {
        display: grid;
        grid-template-columns: 1fr;
        gap: 0.75rem;
        margin-bottom: 1rem;
    }

    .info-item {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
    }

    .info-label {
        font-size: 0.75rem;
        color: #6b7280;
        font-weight: 500;
    }

    .info-value {
        font-size: 0.9rem;
        color: var(--dark);
        word-break: break-word;
    }

    /* NUEVO: Estilos para campos truncados en mobile */
    .direccion-mobile, .email-mobile {
        max-height: 40px;
        overflow: hidden;
        position: relative;
        cursor: pointer;
        padding-right: 20px;
    }

        .direccion-mobile::after, .email-mobile::after {
            content: '...';
            position: absolute;
            right: 0;
            bottom: 0;
            background: white;
            padding-left: 5px;
        }

        .direccion-mobile.expanded, .email-mobile.expanded {
            max-height: none;
            white-space: pre-wrap;
        }

            .direccion-mobile.expanded::after, .email-mobile.expanded::after {
                display: none;
            }

    .card-actions {
        display: flex;
        gap: 0.5rem;
        justify-content: center;
        padding-top: 0.5rem;
        border-top: 1px solid var(--border);
    }

    .badge {
        padding: 0.25rem 0.75rem;
        border-radius: 20px;
        font-size: 0.75rem;
        font-weight: 600;
        white-space: nowrap;
        display: inline-block;
    }

    .badge-success {
        background: #d1fae5;
        color: #065f46;
    }

    .badge-danger {
        background: #fee2e2;
        color: #991b1b;
    }

    .badge-warning {
        background: #fef3c7;
        color: #92400e;
    }

    .badge-info {
        background: #dbeafe;
        color: #1e40af;
    }

    .pagination-container {
        display: flex;
        justify-content: center;
        margin-top: 2rem;
        padding: 1rem;
    }

    .pagination {
        display: flex;
        gap: 0.25rem;
        align-items: center;
        flex-wrap: wrap;
    }

    .page-link {
        min-width: 36px;
        height: 36px;
        padding: 0 0.5rem;
        border: 2px solid var(--border);
        border-radius: 6px;
        background: white;
        color: var(--dark);
        text-decoration: none;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .page-link:hover {
            background: #f3f4f6;
            border-color: #d1d5db;
        }

        .page-link.active {
            background: var(--primary);
            color: white;
            border-color: var(--primary);
        }

        .page-link.disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }

    .empty-state {
        text-align: center;
        padding: 3rem 1rem;
        color: #6b7280;
        background: white;
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    .summary-info {
        background: white;
        padding: 0.75rem 1rem;
        border-radius: 8px;
        margin-bottom: 1rem;
        box-shadow: 0 1px 4px rgba(0,0,0,0.1);
        font-size: 0.9rem;
        color: #6b7280;
    }

    .status-active {
        color: var(--success);
    }

    .status-inactive {
        color: var(--danger);
    }

    /* NUEVO: Estilos para el modal */
    .modal-descripcion {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0,0,0,0.5);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 9999;
    }

    .modal-content {
        background: white;
        padding: 2rem;
        border-radius: 10px;
        max-width: 500px;
        width: 90%;
        max-height: 80vh;
        overflow-y: auto;
    }

    @@media (min-width: 768px) {
        .container-proveedores {
            padding: 1.5rem;
        }

        .table-desktop {
            display: block;
        }

        .cards-mobile {
            display: none;
        }

        .header h1 {
            font-size: 1.75rem;
        }

        .filter-grid {
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        }
    }

    @@media (max-width: 767px) {
        .table-desktop {
            display: none;
        }

        .cards-mobile {
            display: grid;
        }

        .header {
            padding: 0.75rem;
        }

        .filter-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

<div class="container-proveedores">
    <div class="header">
        <h1><i class="fas fa-truck"></i> @ViewData["Title"]</h1>
        <div class="d-flex gap-2">
            <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Nuevo Proveedor</a>
            <button class="btn btn-secondary" data-bs-toggle="collapse" data-bs-target="#filters">
                <i class="fas fa-filter"></i> Filtros
            </button>
        </div>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger"><i class="fas fa-exclamation-circle"></i> @TempData["Error"]</div>
    }
    @if (TempData["Ok"] != null)
    {
        <div class="alert alert-success"><i class="fas fa-check-circle"></i> @TempData["Ok"]</div>
    }
    @if (TempData["MensajeExito"] != null)
    {
        <div class="alert alert-success"><i class="fas fa-check-circle"></i> @TempData["MensajeExito"]</div>
    }
    @if (TempData["MensajeError"] != null)
    {
        <div class="alert alert-danger"><i class="fas fa-exclamation-circle"></i> @TempData["MensajeError"]</div>
    }

    <div class="filters collapse" id="filters">
        <form asp-action="Index" method="get">
            <input type="hidden" name="pageNumber" value="1" />
            <div class="filter-grid">
                <input type="text" class="form-control" name="nombreEmpresa" placeholder="Nombre de la empresa" value="@ViewBag.CurrentNombreEmpleado">
                <select class="form-select" name="estado">
                    <option value="">Todos los estados</option>
                    <option value="Activo" selected="@(ViewBag.CurrentApellidoEmpleado == "Activo")">Activo</option>
                    <option value="Inactivo" selected="@(ViewBag.CurrentApellidoEmpleado == "Inactivo")">Inactivo</option>
                </select>
            </div>
            <div class="filter-actions">
                <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-times"></i> Limpiar</a>
                <button type="submit" class="btn btn-primary"><i class="fas fa-search"></i> Buscar</button>
            </div>
        </form>
    </div>

    <div class="table-desktop">
        <table>
            <thead>
                <tr>
                    <th>Empresa</th>
                    <th>Dirección</th>
                    <th>Teléfono</th>
                    <th>Email</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td style="font-weight: 600;">@item.nombreEmpresa</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.direccion))
                                {
                                    <span class="td-direccion" onclick="mostrarDireccion('@Html.Raw(item.direccion?.Replace("'", "\\'") ?? "")')">
                                        @(item.direccion.Length > 30 ? item.direccion.Substring(0, 30) + "..." : item.direccion)
                                    </span>
                                }
                                else
                                {
                                    <span class="text-muted">No especificada</span>
                                }
                            </td>
                            <td>@item.telefono</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.email))
                                {
                                    <span class="td-email" onclick="mostrarEmail('@Html.Raw(item.email?.Replace("'", "\\'") ?? "")')">
                                        @(item.email.Length > 25 ? item.email.Substring(0, 25) + "..." : item.email)
                                    </span>
                                }
                                else
                                {
                                    <span class="text-muted">No especificado</span>
                                }
                            </td>
                            <td>
                                @if (item.estado == "Activo")
                                {
                                    <span class="badge badge-success">@item.estado</span>
                                }
                                else if (item.estado == "Inactivo")
                                {
                                    <span class="badge badge-danger">@item.estado</span>
                                }
                            </td>
                            <td>
                                <div class="d-flex gap-1 justify-content-center">
                                    <a asp-action="Edit" asp-route-id="@item.idProveedor" class="btn btn-secondary btn-sm" title="Editar">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.idProveedor" class="btn btn-secondary btn-sm" title="Detalles">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.idProveedor" class="btn btn-secondary btn-sm" title="Eliminar">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="empty-state">
                            <i class="fas fa-truck fa-2x mb-2"></i>
                            <p>No hay proveedores registrados</p>
                            <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus-circle"></i> Crear Primer Proveedor</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="cards-mobile">
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <div class="card">
                    <div class="card-header">
                        <div>
                            <strong>@item.nombreEmpresa</strong>
                            <div>
                                @if (item.estado == "Activo")
                                {
                                    <span class="badge badge-success">@item.estado</span>
                                }
                                else if (item.estado == "Inactivo")
                                {
                                    <span class="badge badge-danger">@item.estado</span>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="card-info">
                        <div class="info-item">
                            <span class="info-label">Dirección</span>
                            @if (!string.IsNullOrEmpty(item.direccion))
                            {
                                <div class="info-value direccion-mobile" onclick="this.classList.toggle('expanded')">@item.direccion</div>
                            }
                            else
                            {
                                <span class="info-value text-muted">No especificada</span>
                            }
                        </div>
                        <div class="info-item">
                            <span class="info-label">Teléfono</span>
                            <span class="info-value">@item.telefono</span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">Email</span>
                            @if (!string.IsNullOrEmpty(item.email))
                            {
                                <div class="info-value email-mobile" onclick="this.classList.toggle('expanded')">@item.email</div>
                            }
                            else
                            {
                                <span class="info-value text-muted">No especificado</span>
                            }
                        </div>
                    </div>
                    <div class="card-actions">
                        <a asp-action="Edit" asp-route-id="@item.idProveedor" class="btn btn-secondary btn-sm"><i class="fas fa-edit"></i></a>
                        <a asp-action="Details" asp-route-id="@item.idProveedor" class="btn btn-secondary btn-sm"><i class="fas fa-eye"></i></a>
                        <a asp-action="Delete" asp-route-id="@item.idProveedor" class="btn btn-secondary btn-sm"><i class="fas fa-trash"></i></a>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="empty-state">
                <i class="fas fa-truck fa-2x mb-2"></i>
                <p>No hay proveedores registrados</p>
                <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus-circle"></i> Crear Primer Proveedor</a>
            </div>
        }
    </div>

    @if (totalPages > 1)
    {
        <div class="pagination-container">
            <nav>
                <ul class="pagination">
                    @if (hasPreviousPage)
                    {
                        <li>
                            <a class="page-link" asp-action="Index" asp-route-pageNumber="@(pageNumber - 1)"
                               asp-route-nombreEmpresa="@ViewBag.CurrentNombreEmpleado"
                               asp-route-estado="@ViewBag.CurrentApellidoEmpleado">
                                <i class="fas fa-chevron-left"></i>
                            </a>
                        </li>
                    }
                    @for (int i = 1; i <= totalPages; i++)
                    {
                        if (i == 1 || i == totalPages || (i >= pageNumber - 2 && i <= pageNumber + 2))
                        {
                            <li>
                                <a class="page-link @(i == pageNumber ? "active" : "")" asp-action="Index" asp-route-pageNumber="@i"
                                   asp-route-nombreEmpresa="@ViewBag.CurrentNombreEmpleado"
                                   asp-route-estado="@ViewBag.CurrentApellidoEmpleado">
                                    @i
                                </a>
                            </li>
                        }
                        else if (i == pageNumber - 3 || i == pageNumber + 3)
                        {
                            <li><span class="page-link disabled">...</span></li>
                        }
                    }
                    @if (hasNextPage)
                    {
                        <li>
                            <a class="page-link" asp-action="Index" asp-route-pageNumber="@(pageNumber + 1)"
                               asp-route-nombreEmpresa="@ViewBag.CurrentNombreEmpleado"
                               asp-route-estado="@ViewBag.CurrentApellidoEmpleado">
                                <i class="fas fa-chevron-right"></i>
                            </a>
                        </li>
                    }
                </ul>
            </nav>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Función para mostrar Dirección en modal (Desktop)
        function mostrarDireccion(direccion) {
            direccion = direccion.replace(/\\'/g, "'");
            const modal = $(`
                <div class="modal-descripcion">
                    <div class="modal-content">
                        <h4><i class="fas fa-map-marker-alt"></i> Dirección Completa</h4>
                        <p style="word-break: break-word; white-space: pre-wrap;">${direccion}</p>
                        <button class="btn btn-primary" onclick="$(this).closest('.modal-descripcion').remove()">
                            <i class="fas fa-times"></i> Cerrar
                        </button>
                    </div>
                </div>
            `);
            modal.on('click', e => { if (e.target === modal[0]) modal.remove(); });
            $('body').append(modal);
        }

        // Función para mostrar Email en modal (Desktop)
        function mostrarEmail(email) {
            email = email.replace(/\\'/g, "'");
            const modal = $(`
                <div class="modal-descripcion">
                    <div class="modal-content">
                        <h4><i class="fas fa-envelope"></i> Email Completo</h4>
                        <p style="word-break: break-word;">
                            <a href="mailto:${email}" style="color: var(--primary); text-decoration: none;">
                                ${email}
                            </a>
                        </p>
                        <button class="btn btn-primary" onclick="$(this).closest('.modal-descripcion').remove()">
                            <i class="fas fa-times"></i> Cerrar
                        </button>
                    </div>
                </div>
            `);
            modal.on('click', e => { if (e.target === modal[0]) modal.remove(); });
            $('body').append(modal);
        }

        $(document).ready(function() {
            // Auto-close alerts after 4 seconds
            setTimeout(() => $('.alert').fadeOut(300, function() { $(this).remove(); }), 4000);

            // Toggle filter icon
            $('#filters').on('show.bs.collapse', function() {
                $('[data-bs-target="#filters"] i').removeClass('fa-filter').addClass('fa-times');
            }).on('hide.bs.collapse', function() {
                $('[data-bs-target="#filters"] i').removeClass('fa-times').addClass('fa-filter');
            });

            // Smooth scroll on pagination
            $(document).on('click', '.page-link', function(e) {
                if (!$(this).hasClass('disabled') && !$(this).hasClass('active')) {
                    $('html, body').animate({ scrollTop: $('.container-proveedores').offset().top - 20 }, 300);
                }
            });

            // Estado dropdown functionality
            $('.form-select[name="estado"]').on('change', function() {
                $(this).closest('form').find('input[name="pageNumber"]').val(1);
            });

            // Nombre input functionality
            $('.form-control[name="nombreEmpresa"]').on('keyup', function(e) {
                if (e.key === 'Enter') {
                    $(this).closest('form').find('input[name="pageNumber"]').val(1);
                    $(this).closest('form').submit();
                }
            });
        });
    </script>
}