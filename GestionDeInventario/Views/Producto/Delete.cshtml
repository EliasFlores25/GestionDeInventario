@model GestionDeInventario.DTOs.ProductoDTOs.ProductoResponseDTO

@{
    ViewData["Title"] = "Eliminar Producto";
}

<style>
    /* --------------------------------------------------
         * ------------------ DISEÑO MODERNO Y PROFESIONAL ------------------
         * -------------------------------------------------- */
    :root {
        --color-primario: #004d99; /* Azul Corporativo Profundo */
        --color-acento: #1abc9c; /* Verde/Turquesa para acentos y éxito */
        --color-fondo-claro: #f8f9fa; /* Fondo muy claro */
        --color-texto-oscuro: #34495e; /* Gris pizarra para texto */
        --color-borde: #dee2e6; /* Borde de tabla y separación */
        --color-peligro: #e74c3c; /* Rojo para alertas y eliminar */
    }

    body {
        background-color: var(--color-fondo-claro);
    }

    /* Contenedor principal */
    .form-container {
        max-width: 1200px;
        margin: 40px auto 20px auto;
        background-color: white;
        padding: 40px;
        border-radius: 16px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
        border: 1px solid #e0e0e0;
    }

    /* Encabezado principal */
    h1 {
        color: var(--color-primario);
        border-left: 5px solid var(--color-acento);
        padding-left: 15px;
        margin-bottom: 5px;
        font-size: 2.2rem;
        font-weight: 700;
        display: flex;
        align-items: center;
    }

        /* El ícono de la papelera en h1 será rojo de peligro */
        h1 i {
            margin-right: 10px;
            font-size: 1.8rem;
            color: var(--color-peligro) !important;
        }

    /* Mensaje de confirmación (h3 y p) */
    h3 {
        color: var(--color-texto-oscuro);
        font-size: 1.5rem;
        font-weight: 600;
        margin-top: 20px;
        padding-left: 20px;
    }

    p.text-danger {
        color: var(--color-peligro) !important;
        font-weight: 600;
        padding-left: 20px;
        margin-bottom: 30px;
    }

    hr {
        border-top: 1px solid var(--color-borde);
        margin-bottom: 30px;
    }

    /* ------------------ ESTILOS DE LISTA DE DETALLES (DL) ------------------ */
    dl.row {
        padding: 0 20px;
    }

        dl.row dt {
            font-weight: 700;
            color: var(--color-primario);
            padding-top: 8px;
            padding-bottom: 8px;
            border-bottom: 1px dashed var(--color-borde);
        }

        dl.row dd {
            padding-top: 8px;
            padding-bottom: 8px;
            border-bottom: 1px dashed var(--color-borde);
            color: var(--color-texto-oscuro);
        }

    /* ------------------ ESTILOS DE BOTONES ------------------ */
    .form-actions {
        margin-top: 40px;
        display: flex;
        gap: 15px;
        padding-left: 20px;
    }

    /* Botón Eliminar (Peligro) */
    .btn-danger {
        background-color: var(--color-peligro);
        border-color: var(--color-peligro);
        padding: 10px 25px;
        font-weight: 600;
        border-radius: 8px;
        transition: background-color 0.3s, transform 0.3s, box-shadow 0.3s;
    }

        .btn-danger:hover {
            background-color: #c0392b;
            border-color: #c0392b;
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(231, 76, 60, 0.3);
        }

    /* Botón Cancelar (Secundario) */
    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        color: white;
        padding: 10px 25px;
        font-weight: 600;
        border-radius: 8px;
        transition: background-color 0.3s;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #5a6268;
        }

    .btn i {
        margin-right: 8px;
    }

    /* Enlace "Volver a la Lista" */
    .link-container {
        max-width: 1200px;
        margin: 0px auto 40px auto;
        background-color: white;
        padding: 15px 40px;
        border-radius: 16px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        border: 1px solid #e0e0e0;
    }

        .link-container a {
            color: var(--color-primario);
            text-decoration: none;
            font-weight: 600;
            display: inline-block;
            transition: color 0.3s;
        }

            .link-container a:hover {
                color: #003366;
                text-decoration: underline;
            }


    /* ------------------ RESPONSIVENESS (MÓVIL) ------------------ */
    @@media screen and (max-width: 767px) {
        .form-container, .link-container {
            padding: 20px;
            margin: 20px auto;
            border-radius: 10px;
        }

        h1 {
            font-size: 1.8rem;
            padding-left: 10px;
        }

        h3, p.text-danger {
            font-size: 1.2rem;
            padding-left: 15px;
        }

        .form-actions {
            flex-direction: column;
            gap: 10px;
            padding-left: 0;
        }

            .form-actions .btn {
                width: 100%;
                text-align: center;
            }

        dl.row dt, dl.row dd {
            padding: 5px 0;
            font-size: 0.95rem;
        }
    }

</style>

<div class="form-container">
    <h1><i class="fas fa-trash-alt text-danger"></i> Eliminar Producto</h1>
    <h3>¿Estás seguro de que deseas eliminar este Producto?</h3>
    <p class="text-danger">Esta acción es irreversible.</p>
    <hr />

    <div class="row">
        <div class="col-lg-10 col-md-12">
            <dl class="row">
                <dt class="col-sm-4">
                    Nombre
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.nombre)
                </dd>

                <dt class="col-sm-4">
                    Descripción
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.descripcion)
                </dd>

                <dt class="col-sm-4">
                    Cantidad en Stock
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.cantidadStock)
                </dd>

                <dt class="col-sm-4">
                    Unidad de Medida
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.unidadMedida)
                </dd>

                <dt class="col-sm-4">
                    Precio
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.precio)
                </dd>

                <dt class="col-sm-4">
                    Estado
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.estado)
                </dd>

            </dl>
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="idProducto" />
        <div class="form-actions">
            <button type="submit" value="Eliminar" class="btn btn-danger"><i class="fas fa-trash-alt"></i> Eliminar</button>
            <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-times-circle"></i> Cancelar</a>
        </div>
    </form>
</div>


<div class="mt-3 link-container">
    <a asp-action="Index"><i class="fas fa-arrow-left"></i> Volver a la Lista</a>
</div>