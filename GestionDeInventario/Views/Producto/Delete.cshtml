@model GestionDeInventario.DTOs.ProductoDTOs.ProductoResponseDTO

@{
    ViewData["Title"] = "Eliminar Producto";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<style>
    /* --------------------------------------------------
         * ------------------ DISEÑO MODERNO Y PROFESIONAL (Temas del Index/Create) ------------------
         * -------------------------------------------------- */
    :root {
        --color-primario: #0A192F; /* Azul Marino Profundo (Títulos, Botón Principal) */
        --color-secundario: #1F364D; /* Azul Marino más claro (Labels) */
        --color-acento: #FFC107; /* Amarillo Dorado/Naranja (Línea de Separación) */
        --color-fondo-claro: #F4F7F9; /* Fondo muy claro, casi blanco */
        --color-texto-oscuro: #333C48; /* Gris carbón para texto general */
        --color-borde-suave: #E0E4E7; /* Borde de separación */
        --color-peligro-base: #DC3545; /* Rojo de Bootstrap para la acción principal */
        --color-peligro-hover: #C82333; /* Rojo más oscuro al pasar el ratón */
    }

    body {
        background-color: var(--color-fondo-claro);
        font-family: 'Inter', sans-serif;
    }

    /* Contenedor principal */
    .form-container {
        max-width: 1000px;
        margin: 40px auto 20px auto;
        background-color: white;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
        border: 1px solid var(--color-borde-suave);
    }

    /* Encabezado principal */
    h1 {
        color: var(--color-primario);
        padding-left: 0;
        margin-bottom: 5px;
        font-size: 2.5rem;
        font-weight: 800;
        position: relative;
        display: flex;
        align-items: center;
    }

        h1 i {
            margin-right: 15px;
            font-size: 2.2rem;
            color: var(--color-peligro-base) !important; /* El ícono de la papelera en rojo */
        }

        h1::after {
            content: '';
            display: block;
            width: 80px;
            height: 4px;
            background-color: var(--color-peligro-base); /* Línea de acento en rojo de peligro */
            margin-top: 5px;
            border-radius: 2px;
            position: absolute;
            bottom: -15px;
            left: 0;
        }

    /* Mensaje de confirmación (h3 y p) */
    h3 {
        color: var(--color-texto-oscuro);
        font-size: 1.5rem;
        font-weight: 600;
        margin-top: 30px; /* Separación después de la línea de h1 */
        padding-left: 0;
        margin-bottom: 10px;
    }

    p.text-danger-confirm {
        color: var(--color-peligro-base) !important;
        font-weight: 600;
        padding-left: 0;
        margin-bottom: 30px;
        font-size: 1.1rem;
    }

    /* Separador visual */
    .separator {
        border-top: 1px solid var(--color-borde-suave);
        margin-top: 30px; /* Separación antes de la lista de detalles */
        margin-bottom: 30px;
    }

    /* ------------------ ESTILOS DE LISTA DE DETALLES (DL) ------------------ */
    dl.row {
        padding: 0; /* Quitamos el padding para alinearlo con el contenedor */
        border: 1px solid var(--color-borde-suave);
        border-radius: 8px;
        background-color: #fcfcfc;
    }

        dl.row > * {
            /* Asegura que todos los dt/dd estén dentro del borde */
            padding-left: 1.5rem !important;
            padding-right: 1.5rem !important;
        }

        dl.row dt {
            font-weight: 700;
            color: var(--color-secundario);
            padding-top: 15px;
            padding-bottom: 15px;
            border-bottom: 1px dashed var(--color-borde-suave);
        }

        dl.row dd {
            padding-top: 15px;
            padding-bottom: 15px;
            border-bottom: 1px dashed var(--color-borde-suave);
            color: var(--color-texto-oscuro);
        }

            /* Quitar el borde inferior al último par */
            dl.row dt:last-child,
            dl.row dd:last-child {
                border-bottom: none;
            }

    /* ------------------ ESTILOS DE BOTONES ------------------ */
    .form-actions {
        margin-top: 40px;
        display: flex;
        gap: 15px;
        padding-left: 0;
    }

    /* Botón Eliminar (Peligro) */
    .btn-danger {
        background-color: var(--color-peligro-base);
        border-color: var(--color-peligro-base);
        padding: 10px 25px;
        font-weight: 600;
        border-radius: 8px;
        transition: background-color 0.3s, transform 0.3s, box-shadow 0.3s;
        color: white;
    }

        .btn-danger:hover {
            background-color: var(--color-peligro-hover);
            border-color: var(--color-peligro-hover);
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(220, 53, 69, 0.3);
        }

    /* Botón Cancelar (Secundario) */
    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        color: white;
        padding: 10px 25px;
        font-weight: 600;
        border-radius: 8px;
        transition: background-color 0.3s;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #5a6268;
        }

    .btn i {
        margin-right: 8px;
    }

    /* Enlace "Volver a la Lista" */
    .link-container {
        max-width: 1000px; /* Alineación con el form-container */
        margin: 20px auto 40px auto;
        background-color: white;
        padding: 15px 40px;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
        border: 1px solid var(--color-borde-suave);
    }

        .link-container a {
            color: var(--color-secundario);
            text-decoration: none;
            font-weight: 600;
            display: inline-block;
            transition: color 0.3s;
        }

            .link-container a:hover {
                color: var(--color-primario);
                text-decoration: none;
            }


    /* ------------------ RESPONSIVENESS (MÓVIL) ------------------ */
    @@media screen and (max-width: 767px) {
        .form-container, .link-container {
            padding: 20px;
            margin: 20px auto;
            border-radius: 10px;
        }

        h1 {
            font-size: 2rem;
        }

            h1 i {
                font-size: 1.8rem;
            }

            h1::after {
                bottom: -10px;
            }

        h3 {
            font-size: 1.3rem;
            margin-top: 20px;
        }

        p.text-danger-confirm {
            font-size: 1rem;
            margin-bottom: 20px;
        }

        .form-actions {
            flex-direction: column;
            gap: 10px;
        }

            .form-actions .btn {
                width: 100%;
                text-align: center;
            }

        dl.row dt, dl.row dd {
            padding: 10px 1rem !important; /* Ajuste para móvil */
            font-size: 0.95rem;
        }
    }

</style>

<div class="form-container">
    <h1><i class="bi bi-trash"></i> @ViewData["Title"]</h1>
    <h3>Confirmar Eliminación del Producto: @Model.nombre</h3>
    <p class="text-danger-confirm">¡Advertencia! Esta acción eliminará permanentemente los datos del producto y es irreversible.</p>

    <div class="separator"></div>

    <div class="row">
        <div class="col-lg-12 col-md-12">
            <dl class="row">
                <!-- Nombre -->
                <dt class="col-sm-4">
                    Nombre
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.nombre)
                </dd>

                <!-- Descripción -->
                <dt class="col-sm-4">
                    Descripción
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.descripcion)
                </dd>

                <!-- Cantidad en Stock -->
                <dt class="col-sm-4">
                    Cantidad en Stock
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.cantidadStock)
                </dd>

                <!-- Unidad de Medida -->
                <dt class="col-sm-4">
                    Unidad de Medida
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.unidadMedida)
                </dd>

                <!-- Precio -->
                <dt class="col-sm-4">
                    Precio
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.precio)
                </dd>

                <!-- Estado -->
                <dt class="col-sm-4">
                    Estado
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.estado)
                </dd>

            </dl>
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="idProducto" />
        <div class="form-actions">
            <button type="submit" value="Eliminar" class="btn btn-danger"><i class="bi bi-trash"></i> Eliminar Producto</button>
            <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-x-circle"></i> Cancelar</a>

            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Volver a la Lista
            </a>
        </div>
    </form>
</div>