@model IEnumerable<GestionDeInventario.Models.Empleado>
@{
    ViewData["Title"] = "Gestión de Empleados";

    var buscarEmpleado = new Empleado();
}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="text-primary">Listado de Empledos</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Crear Nuevo Empleado
    </a>
</div>

<div class="search-container">
    <form asp-action="Index">
        <table id="Tabla">
            <tr>
                <td>
                    <div class="row">
                        <div class="form-group col-mb-4">
                            <label class="control-label">Nombre del Empleado</label>
                            <input name="nombre" class="form-control" placeholder="Ej: Jose Perez" />
                        </div>

                        <div class="form-group col-md-4 d-flex align-items-end">
                            <button type="submit" class="btn btn-dark mr-2">
                                <i class="bi bi-search"></i> Buscar
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Limpiar
                            </a>
                        </div>
                    </div>
                </td>
                <td>
                    <div class="form-group col-md-6">
                        <div class="row">
                            <label class="control-label">Cant. Registros</label>
                            <select name="registros" class="form-control">
                                <option value="10">10</option>
                                <option value="20">20</option>
                                <option value="30">30</option>
                                <option value="40">40</option>
                                <option value="50">50</option>
                                <option value="0">Todos</option>
                            </select>
                        </div>
                    </div>
                </td>
            </tr>
        </table>
    </form>
</div>
@if (TempData["MensajeExito"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["MensajeExito"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
@if (TempData["MensajeError"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["MensajeError"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
<div class="table-responsive">
    <table class="table table-striped table-hover" id="mytable">
        <thead class="thead-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.nombre)</th>
                <th>@Html.DisplayNameFor(model => model.apellido)</th>
                <th>@Html.DisplayNameFor(model => model.edad)</th>
                <th>@Html.DisplayNameFor(model => model.genero)</th>
                <th>@Html.DisplayNameFor(model => model.telefono)</th>
                <th>@Html.DisplayNameFor(model => model.direccion)</th>
                <th>@Html.DisplayNameFor(model => model.departamentoId)</th>
                <th>@Html.DisplayNameFor(model => model.estado)</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    
                    <td>@Html.DisplayFor(modelItem => item.nombre)</td>
                    <td>@Html.DisplayFor(modelItem => item.apellido)</td>
                    <td>@Html.DisplayFor(modelItem => item.edad)</td>
                    <td>@Html.DisplayFor(modelItem => item.genero)</td>
                    <td>@Html.DisplayFor(modelItem => item.telefono)</td>
                    <td>@Html.DisplayFor(modelItem => item.direccion)</td>
                    <td>@Html.DisplayFor(modelItem => item.departamentoId)</td>
                    <td>@Html.DisplayFor(modelItem => item.estado)</td>
                    <td class="text-center" style="min-width: 250px;">
                        <div class="btn-group" role="group">
                            <a asp-action="Edit" asp-route-id="@item.idEmpleado" class="btn btn-warning btn-sm" title="Editar">
                                <i class="bi bi-pencil"></i> Editar
                            </a>
                            <a asp-action="Details" asp-route-id="@item.idEmpleado" class="btn btn-info btn-sm" title="Detalles">
                                <i class="bi bi-eye"></i> Detalles
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.idEmpleado" class="btn btn-danger btn-sm" title="Eliminar">
                                <i class="bi bi-trash"></i> Eliminar
                            </a>
                        </div>
                    </td>
                   
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Configuración básica de paginación
            const rowsPerPage = 5;
            const $table = $('#mytable');
            const $rows = $table.find('tbody tr');
            const pageCount = Math.ceil($rows.length / rowsPerPage);
            let currentPage = 1;

            function showPage(page) {
                $rows.hide();
                $rows.slice((page-1)*rowsPerPage, page*rowsPerPage).show();
            }

            // Crear controles de paginación
            const $pagination = $('<div class="pagination-controls"></div>').insertAfter($table);

            for(let i = 1; i <= pageCount; i++) {
                $('<button class="btn btn-dark btn-sm">'+i+'</button>')
                    .appendTo($pagination)
                    .click(function() {+
                        currentPage = i;+++++++++++
                        showPage(currentPage);
                        $('.pagination-controls button').removeClass('active');
                        $(this).addClass('active');
                    });
            }

            // Mostrar primera página
            showPage(1);
            $('.pagination-controls button:first').addClass('active');
        });
    </script>
    }