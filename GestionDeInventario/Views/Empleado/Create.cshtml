@model GestionDeInventario.Models.Empleado

@{
    ViewData["Title"] = "Crear Empleado";
}

<div class="form-container">
    <h1><i class="fas fa-user-plus"></i> Crear Empleado</h1>
    <h4>Ingrese los Datos del Nuevo Empleado</h4>
    <hr />

    <div class="row">
        <div class="col-lg-10 col-md-12">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="row">
                    <div class="col-md-6 form-group mb-3">
                        <label asp-for="nombre" class="control-label">Nombre</label>
                        <input asp-for="nombre" class="form-control" placeholder="Ej: Nayib Alexander" />
                        <span asp-validation-for="nombre" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-group mb-3">
                        <label asp-for="apellido" class="control-label">Apellido</label>
                        <input asp-for="apellido" class="form-control" placeholder="Ej: Bukele Gonzales" />
                        <span asp-validation-for="apellido" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 form-group mb-3">
                        <label asp-for="edad" class="control-label">Edad</label>
                        <input asp-for="edad" class="form-control" placeholder="Ej: 25 años" />
                        <span asp-validation-for="edad" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-group mb-3">
                        <label asp-for="genero" class="control-label">Genero</label>
                        <select asp-for="genero" class="form-control">
                            <option value="">-- Seleccione el Genero --</option>
                            <option value="Masculino">Masculino</option>
                            <option value="Femenino">Femenino</option>
                        </select>
                        <span asp-validation-for="genero" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 form-group mb-3">
                        <label asp-for="telefono" class="control-label">Teléfono</label>
                        <input asp-for="telefono" class="form-control" placeholder="Ej: 1234-5678" />
                        <span asp-validation-for="telefono" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-group mb-3">
                        <label asp-for="direccion" class="control-label">Dirección</label>
                        <input asp-for="direccion" class="form-control" placeholder="Ej: Sonsonate" />
                        <span asp-validation-for="direccion" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 form-group mb-4">
                        <label asp-for="departamentoId" class="control-label">Departamento</label>
                        <input asp-for="departamentoId" class="form-control" placeholder="Ej: 1" />
                        <span asp-validation-for="departamentoId" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-group mb-4">
                        <label asp-for="estado" class="control-label">Estado</label>
                        <select asp-for="estado" class="form-control">
                            <option value="">-- Seleccione el Estado --</option>
                            <option value="Activo">Activo</option>
                            <option value="Inactivo">Inactivo</option>
                        </select>
                        <span asp-validation-for="estado" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group form-actions">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Crear Empleado
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-times-circle"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}